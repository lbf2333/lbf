/* pages/addIformation/addIformation.wxss */
page{
  padding-bottom: 100rpx;
}
.address {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 33rpx 27rpx 48rpx 26rpx;
}

.left {
  font-size: 30rpx;
  color: #303030;
}

.right {
  font-size: 26rpx;
  color: #767676;
}

.in-use {
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient( rgba(250, 151, 84, 1), rgba(255, 191, 117, 1));
  border-radius: 10rpx 0rpx 10rpx 0rpx;
}

.add-content {
  padding: 0 32rpx 0 31rpx;
}

.add-des {
  position: relative;
  width: 687rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 3px 6px 20px 4px rgba(36, 36, 35, 0.14);
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.icons {
  overflow: hidden;
}

.icons image {
  width: 36rpx;
  height: 36rpx;
  float: right;
  margin: 20rpx 28rpx 17rpx 28rpx;
}

.information {
  padding-left: 57rpx;
  box-sizing: border-box;
}

.character {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.character .name {
  font-size: 30rpx;
  font-weight: bold;
  color: #262626;
}

.phone {
  margin-left: 92rpx;
}

.phone image {
  vertical-align: middle;
  width: 45rpx;
  height: 45rpx;
}

.phone text {
  font-size: 30rpx;
  color: #262626;
}

.harvest-address {
  display: flex;
}

.locattion text {
  font-size: 30rpx;
}

.harvest-address image {
  vertical-align: middle;
  margin-left: -5rpx;
  width: 45rpx;
  height: 45rpx;
}

.real-address {
  font-size: 28rpx;
  width: 400rpx;
  font-size: 30rpx;
  margin-top: 9rpx;
  color: #242423;
}

.heng {
  width: 100%;
  height: 1px;
  background: #ccc;
  margin-left: -28.5rpx;
  margin-top: 26rpx;
  margin-bottom: 25rpx;
}

.school {
  color: #262626;
  font-size: 30rpx;
  padding-bottom: 37rpx;
}

.school image {
  vertical-align: middle;
  margin-left: -5rpx;
  margin-top: -5rpx;
  width: 45rpx;
  height: 45rpx;
}

.school text {
  font-size: 28rpx;
  margin-right: 28rpx;
  color:rgba(38,38,38,1);
}

.Use-add {
  overflow: hidden;
  /* height: 80rpx; */
  margin-right: 20rpx;
}

.Use {
  float: right;
  width: 183rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  margin-bottom: 22rpx;
  text-align: center;
  line-height: 60rpx;
  background: linear-gradient( rgba(250, 151, 84, 1), rgba(255, 191, 117, 1));
  border-radius: 27rpx 27rpx 33rpx 33rpx;
  /* display: none; */
}
