/* pages/searSchchool/searSchchool.wxss */
page{
  height: 100%;
}
.search {
  position: relative;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  width: 100%;
  height: 98rpx;
  background: rgba(249, 248, 244, 1);
}

.search .padding-max {
  padding-left: 90rpx;
  box-sizing: border-box;
  font-size:28rpx;
  color:#2E2E2E;
  width: 536rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 30rpx;
}
.padding-min{
  padding-left: 45rpx;
  padding-right: 45rpx;
    box-sizing: border-box;
  font-size:28rpx;
  color:#2E2E2E;
  width: 536rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 30rpx;
}
.search image {
  position: absolute;
  left: 8%;
  width: 41rpx;
  height: 41rpx;
}

.search button {
  width: 143rpx;
  height: 60rpx;
  background: linear-gradient(rgba(250, 151, 84, 1), rgba(255, 191, 117, 1));
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  padding-right: -5rpx;
  margin-left: 10rpx;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 1);
}
.schools {
  padding: 0 30rpx;
}

.school-list {
  /* height: 691rpx; */
  padding: 47rpx 0 51rpx 24rpx;
  border-bottom: 1px solid rgba(229, 229, 229, 1);
  color: #292929;
  font-weight:bold;
}

.school-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #292929;
  margin-bottom: 26rpx;
}

.address {
  display: flex;
}

.address image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 5rpx;
}

.address text {
  font-size: 28rpx;
  color: #666666;
}

.kong{
  text-align: center;
  height: 100%;
}
.kong image{
  width:300rpx;
  height:250rpx;
  margin-top: 250rpx;
}
.kong view{
  font-size: 26rpx;
  color:#D3D2D2;
}
.kong view:nth-of-type(1){
  margin-bottom: 26rpx;
}