page{
  background:#F9F8F4
}
.collection_tab {
  padding: 25rpx 23rpx;
  display: flex;
}
.navtab_item{
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:#FFAA56;
}
.collection_tab>view {
  position: relative
}
.collection_tab>text{
  color: #A1A1A1;
  margin: 0 30rpx 0 20rpx ;
  opacity:0.3;
}
.collection-error{
  margin: 50% auto 
}
.collection-error-img{
  margin: 0 auto;
  width:164rpx;
  height:185rpx;
}
.collection-error-img image{
  width:100%;
  height:100%;
}
.collection-error-font{
  text-align: center;
  margin-top: 38rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(211,210,210,1);
}
.collection_tab .tab_item_active{
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:#FFAA56;

}
.collection_tab .tab_item{
  font-size: 28rpx;
  color: #A1A1A1;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}
.collection_tab>view:nth-child(2) {
  margin-left: 39rpx;
}
.books-lists{
  flex-direction:row;
  display: flex;
  flex-wrap:wrap;
  padding-bottom:80rpx; 
}
.books-i{
  width: 45.5%;
  padding: 25rpx 3% 0;
}
.books-i:nth-child(odd){
  padding-right: 0;
}
.books-i>view{
  background: #fff;
  padding: 27rpx 23rpx;
  box-shadow:2rpx 7rpx 35rpx 5rpx rgba(24,24,24,0.08);
  border-radius:8rpx;
}
.books_img{
  width: 230rpx;
  height: 300rpx; 
  margin: 0 auto;
}
.books_img image{
  width: 100%;
  height: 100%
}
.books_title{
  height: 66rpx;
  line-height: 36rpx;
  margin:25rpx 0 10rpx; 
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:#292928;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /* text-align: center; */
}
.books_num{
  display: flex;
}
.books_num .price{
  flex: 1;
  color: #FFAA56;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
}
.books_num .num{
  flex: 1;
  text-align: right;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:#5B5A5A;
  line-height: 50rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  white-space:nowrap; 
}
