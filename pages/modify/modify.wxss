/* 班级弹框 */

.modals {
  padding: 0 !important;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  padding: 0 !important;
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,.3);
}

.bottom-dialog-body {
  padding: 0 !important;
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  height: 815rpx;
  border-radius: 30rpx  30rpx   0px  0px;
  background-color: #fff;
}

